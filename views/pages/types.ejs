  </head>
  <body>
    <span id="hamburger">&#9776;</span>
    <%- include('_navigation.ejs') %>
    <div id="background">
      <p>Liceul Teoretic "Grigore Antipa" Botoșani</p>
      <div id="line"></div>
      <span class="page-indicator">01</span>
      <div id="circles">
        <div class="circle highlight"></div>
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="circle"></div>
